@charset "utf-8";
@import url(http://fonts.googleapis.com/earlyaccess/jejugothic.css);
.naverJoin{
    width:460px;
    height:auto;
    border:1px solid;
    margin:0 auto;
}
.naverJoin .header{
    width:100%;
    height:auto;
    background:#000;
}
.naverJoin .content{
    width:100%;
    height:auto;
    border:1px solid #f00;
}
.naverJoin .footer{
    width:100%;
    height:auto;
    border:1px solid #00f;
}

/*.naverJoin .header*/
.naverJoin .header h1.logo{
    line-height:170px;
    text-align:center;
    font-size:40px;
    font-family: 'Jeju Gothic', serif;
    color:#fff;
    font-weight:100;
    letter-spacing:6px;
    cursor:pointer;
    text-shadow:1px 2px 5px #fff;

}
.naverJoin .header h1.logo:hover{
   text-shadow:0px 0px 0px #fff;
   text-decoration:underline;

}

/*.naverJoin .content*/
.naverJoin .content>ul>li{
    line-height:40px;
    border:1px solid #f00;
    box-sizing:border-box;
    
}

.naverJoin .content>ul>li.m1{
    background:#982f2f;
    margin-bottom:10px;
}